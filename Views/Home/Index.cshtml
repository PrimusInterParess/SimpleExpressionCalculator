@model DataModel;

@{
    ViewData["Title"] = "Home Page";
}

<section>
    <h2>Simple math expression calculations</h2>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label for="calc">Enter expression here</label>
        <input id="calc" name="input" value="@Model.Input"/>
        <button type="submit">Calculate</button>
    </form>
    <p>Your result is: <b>@Model.Data</b></p>
</section>